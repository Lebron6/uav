<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/bg_mission_item"
            android:gravity="center"
            android:padding="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x157">
    <ImageView
        android:id="@+id/filethumbnail"
            android:layout_width="@dimen/x197"
            android:layout_height="@dimen/x116"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
         />

        <LinearLayout
                android:layout_marginLeft="@dimen/x10"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/filethumbnail"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <TextView
                    android:id="@+id/filename"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:textSize="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/filetype"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:textSize="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/fileSize"
                    android:textColor="#ffffffff"
                    android:textSize="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/filetime"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textSize="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

