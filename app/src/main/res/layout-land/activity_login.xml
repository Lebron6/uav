<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        android:orientation="vertical">

    <EditText
            android:id="@+id/et_account"
            android:layout_width="@dimen/x670"
            android:layout_height="@dimen/x100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x89"
            android:background="@drawable/et_bg_gray"
            android:gravity="left|center_vertical"
            android:hint="请输入账号"
            android:paddingLeft="@dimen/x20"
            android:singleLine="true"
            android:textColor="@color/black"
/>
    <EditText
            android:id="@+id/et_password"
            android:layout_width="@dimen/x670"
            android:layout_height="@dimen/x100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/et_bg_gray"
            android:gravity="left|center_vertical"
            android:hint="请输入密码"
            android:paddingLeft="@dimen/x20"
            android:singleLine="true"
            android:textColor="@color/black"
/>
    <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x50"
            android:layout_width="@dimen/x656"
            android:layout_height="@dimen/x188"
            android:layout_gravity="center_horizontal"
            >

        <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="@dimen/x88"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_bg_blue"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/x32" />
        <Button
                android:id="@+id/btn_config"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/x88"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_bg_blue"
                android:gravity="center"
                android:text="配置"
                android:layout_marginLeft="@dimen/x100"
                android:textColor="@color/white"
                android:textSize="@dimen/x32" />
    </LinearLayout>


</LinearLayout>
